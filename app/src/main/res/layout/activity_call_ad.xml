<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.brisendal.adcreator.CallAd"
    android:background="#FF2345">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here is an overview of the add:"
        android:id="@+id/textView7"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title: "
        android:id="@+id/textView8"
        android:textSize="20dp"
        android:paddingBottom="5dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:id="@+id/textView9"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:paddingBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desc. :"
        android:id="@+id/textView10"
        android:textSize="20dp"
        android:paddingBottom="5dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: "
        android:id="@+id/textView11"
        android:textSize="20dp"
        android:paddingBottom="5dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: "
        android:id="@+id/textView12"
        android:textSize="20dp"
        android:paddingBottom="5dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call Advertiser"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:background="#009910"
        android:textAlignment="center"
        android:onClick="startCalling" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleLabel"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_alignTop="@+id/textView8"
        android:singleLine="true"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7"
        android:gravity="center"
        android:layout_alignLeft="@+id/descLabel"
        android:layout_alignStart="@+id/descLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameLabel"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:singleLine="true"
        android:layout_alignTop="@+id/textView9"
        android:gravity="center"
        android:layout_alignLeft="@+id/titleLabel"
        android:layout_alignStart="@+id/titleLabel"
        android:layout_alignRight="@+id/titleLabel"
        android:layout_alignEnd="@+id/titleLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/descLabel"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:singleLine="true"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_alignLeft="@+id/phoneLabel"
        android:layout_alignStart="@+id/phoneLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phoneLabel"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:singleLine="true"
        android:gravity="center"
        android:layout_alignTop="@+id/textView11"
        android:layout_toRightOf="@+id/textView11"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/priceLabel"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:singleLine="true"
        android:gravity="center"
        android:layout_alignTop="@+id/textView12"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/phoneLabel"
        android:layout_alignStart="@+id/phoneLabel" />
</RelativeLayout>
